@model IEnumerable<Comp2139_Assignment1.Models.Technicians>

@{
    ViewData["Title"] = "Index";

    Layout = "/Views/Shared/_Layout.cshtml";
}

<h1>Technician Manager</h1>


<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Email
            </th>
            <th>
                Phone
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a href="#">@Html.DisplayFor(modelItem => item.Phone)</a>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TechniciansID">
                <button type="button" class="btn btn-primary">Edit</button>
                </a> 
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.TechniciansID">
                    <button type="button" class="btn btn-primary">Delete</button></a>
            </td>
        </tr>
}
    </tbody>
</table>
<p>
    <a asp-action="Create">
        <button type="button" class="btn btn-primary">Add Technician</button>
    </a>
</p>