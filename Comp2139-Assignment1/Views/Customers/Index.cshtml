@model IEnumerable<Comp2139_Assignment1.Models.Customers>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Customer Manger</h1>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
             Name
            </th>
            <th>
                Email
            </th>
            <th>
               City
            </th>
            <th>
                
            </th>
            <th>
                
            </th>
        
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FName) @Html.DisplayFor(modelItem => item.LName)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CustomersID"><button type="button" class="btn btn-primary">Edit</button></a>
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.CustomersID"><button type="button" class="btn btn-primary">Delete</button></a>
            </td>
        </tr>
}
    </tbody>
</table>
<p>
    <a asp-action="Create"><button type="button" class="btn btn-primary"> Add Customer</button></a>
</p>