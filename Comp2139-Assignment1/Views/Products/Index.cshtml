@model IEnumerable<Comp2139_Assignment1.Models.Products>

@{
    ViewData["Title"] = "Index";
}

<h1>Product Manager</h1>


<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                Code
            </th>
            <th>
                Name
            </th>
            <th>
                Price
            </th>
            <th>
                Release Date
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                $@Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProductsID"><button type="button" class="btn btn-primary">Edit</button></a> 
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.ProductsID"><button type="button" class="btn btn-primary">Delete</button></a>
            </td>
        </tr>
}
    </tbody>
</table>
<p>
    <a asp-action="Create"><button type="button" class="btn btn-primary"> Add Product</button></a>
</p>