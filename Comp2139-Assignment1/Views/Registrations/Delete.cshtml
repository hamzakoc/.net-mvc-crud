@model Comp2139_Assignment1.Models.Registrations

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h3>Are you sure you want to delete this Registrations?</h3>
<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
           Customer
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CustomersID)
        </dd>
        <dt class = "col-sm-2">
           Product
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductsID)
